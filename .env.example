# ============================================
# SUPABASE POSTGRESQL
# ============================================
# Замените [YOUR_PASSWORD] на реальный пароль из Supabase Dashboard

# Вариант 1: Connection String (проще)
# DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.xxxxx.supabase.co:5432/postgres?sslmode=require

# ИЛИ Вариант 2: Отдельные параметры
DATABASE_HOST=db.xxxxx.supabase.co
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=[YOUR_PASSWORD]
DATABASE_NAME=postgres
DATABASE_SSL=true

# ============================================
# JWT (сгенерируйте новые для продакшена!)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# REDIS (для Railway используйте Upstash)
# ============================================
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# SERVER
# ============================================
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://your-expo-app-url.com
